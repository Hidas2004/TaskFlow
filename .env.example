# Server
PORT=8080
GIN_MODE=debug

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=taskflow_db
DB_SSLMODE=disable

# JWT
JWT_SECRET=change_this_secret
JWT_EXPIRE_HOURS=72

# File Upload
UPLOAD_PATH=./uploads
MAX_UPLOAD_SIZE=10485760